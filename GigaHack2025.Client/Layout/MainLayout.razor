@inherits LayoutComponentBase
@inject NavigationManager Navigation

<div class="page">
    @if (IsLoginOrRegisterPage)
    {
        <!-- Simple navbar for login/register pages -->
        <SimpleNavbar />
        <main class="content-with-simple-navbar">
            <article class="content px-4">
                @Body
            </article>
        </main>
    }
    else
    {
        <!-- Full sidebar for dashboard and other pages -->
        <div class="sidebar">
            <NavMenu />
        </div>
        <main class="content-with-sidebar">
            <div class="top-row px-4">
                <a href="https://learn.microsoft.com/aspnet/core/" target="_blank">About</a>
            </div>
            <article class="content px-4">
                @Body
            </article>
        </main>
    }
</div>

@code {
    private bool IsLoginOrRegisterPage
    {
        get
        {
            var path = Navigation.ToBaseRelativePath(Navigation.Uri).ToLower();
            return string.IsNullOrWhiteSpace(path) || path == "login" || path == "register";
        }
    }
}
